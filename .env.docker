# ==============================================
# Docker Environment Variables Template
# Copy this file to .env before running with Docker
# ==============================================

# Server Configuration
NODE_ENV=production
PORT=8080
API_PREFIX=/api/v1
TRUST_PROXY=loopback, linklocal, uniquelocal

# Captcha Services (Optional)
# Add your API keys here
CAPTCHA_SOLVER_API_KEY=
CAPTCHA_2CAPTCHA_KEY=
CAPTCHA_ANTICAPTCHA_KEY=

# Google AI (Optional)
# For multiple keys, separate with commas for round-robin rotation
# Example: key1,key2,key3
GEMINI_API_KEY=
GOOGLE_AI_API_KEY=

# Browserless (Optional)
# For multiple tokens, separate with commas for round-robin rotation
# Example: token1,token2,token3
BROWSERLESS_API_TOKEN=

# ==============================================
# Docker-specific Configuration
# ==============================================

# Container name
CONTAINER_NAME=shipment-tracking-api

# Host port mapping
HOST_PORT=8080

# Resource limits (uncomment to use)
# MEMORY_LIMIT=2g
# CPU_LIMIT=2.0
